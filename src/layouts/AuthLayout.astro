---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-50 to-blue-100 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-primary-600 mb-2">AI Snippet Manager</h1>
        <p class="text-gray-600">Organize your code with AI-powered insights</p>
      </div>

      <div class="card">
        <slot />
      </div>

      <p class="text-center text-sm text-gray-600 mt-6">
        Built with Astro, React, Supabase & OpenAI
      </p>
    </div>
  </div>
</BaseLayout>
